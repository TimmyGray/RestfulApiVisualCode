@model RestfulApiVisualCode.ViewModels.AutorizationModel
<header class="darkredclass">
    <div class="container">
        <h1 class="softredtext">Регистрация</h1>

    </div>

</header>

<div class="container text-center w-50">
    <form asp-action="Register" asp-controller="Users" asp-anti-forgery="true">
        <div>
            <div style="color:crimson" class="validation" asp-validation-summary="ModelOnly"></div>

            <div>
                <input class="info-input" placeholder="Введите логин" type="text" asp-for="Login" />
                <span asp-validation-for="Login" />
            </div>
            <div>
                <input class="info-input mt-2" placeholder="Введите пароль" asp-for="Password" />
                <span asp-validation-for="Password" />
            </div>
            <div>
                <input class="info-input mt-2" placeholder="Повторите пароль" asp-for="ConfirmPassword" />
                <span asp-validation-for="ConfirmPassword" />
            </div>
            <div>
                <input type="submit" value="Регистрация" class="btn darkred-btn mt-3" />
            </div>
        </div>
    </form>
</div>
